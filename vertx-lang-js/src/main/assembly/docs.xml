<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1 http://maven.apache.org/xsd/assembly-1.1.1.xsd">
  <id>docs</id>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>${asciidoc.dir}</directory>
      <outputDirectory>./js/</outputDirectory>
      <excludes>
        <exclude>**/*.ad</exclude>
        <exclude>**/*.adoc</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/asciidoc</directory>
      <outputDirectory>./js/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/jsdoc</directory>
      <outputDirectory>./jsdoc/</outputDirectory>
    </fileSet>
  </fileSets>
</assembly>
